{
  "name": "knot-control",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "description": "A daemon that provides an interface to control the KNoT gateway",
  "repository": "git@github.com:cesarbr/knot-control-source",
  "scripts": {
    "lint": "eslint .",
    "build": "babel src --out-dir bin",
    "test": "babel-tape-runner test/services/**/*.js test/interactors/**/*.js test/infrastructure/**/*.js",
    "start": "node bin/daemon",
    "start:dev_daemon": "babel-watch src/daemon"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-preset-env": "^1.6.1",
    "babel-tape-runner": "^2.0.1",
    "babel-watch": "^2.0.7",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "pre-commit": "^1.2.2",
    "sinon": "^4.1.3",
    "tape": "^4.8.0",
    "tape-around": "^2.2.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "dependencies": {
    "dbus": "^1.0.2",
    "enumify": "^1.0.4",
    "fs-extra": "^5.0.0"
  }
}
